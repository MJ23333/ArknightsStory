<body>
    <main>
        <div class="navbar">
            <a href="../index.html" class="dropbtn"><i class="fas fa-home"></i></a>
            <div class="seperator">/</div>
            <div class="dropdown">
                <button class="dropbtn"><a>分类</a></button>
                {# {% endmatch%} #}
                <div class="dropdown-content">
                    {% for cat in categories%}
